<form method="post" action="/register">
  <div class="form-group">
    <label for="reg-username">Username</label>
    <input name="username" type="text" class="form-control" id="reg-username" placeholder="Username">
  </div>
  <div class="form-group">
    <label for="reg-email">Email address</label>
    <input name="email" type="email" class="form-control" id="reg-email" placeholder="Email">
  </div>
  <div class="form-group">
    <label for="reg-password">Password</label>
    <input name="password" type="password" class="form-control" id="reg-password" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-default">Register</button>
</form>
