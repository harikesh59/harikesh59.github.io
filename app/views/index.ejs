<!DOCTYPE html>
<html ng-app="homeApp">
  <head>
    <meta charset="utf-8">
    <title>BreadButter</title>
    <link href="https://fonts.googleapis.com/css?family=Raleway:200,300,400,500,600,700" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" media="screen">
  </head>
  <body>
    <main ng-controller="HomeController">

      <header class="main-header fixed-top clearfix">
        <div class="black-box pull-left">
          <a href="/" class="logo">breadbutter</a>
        </div>
        <div class="nav-open pull-right">
          <a href="#" class="black-box">
            <span class="white-bar"></span>
            <span class="white-bar"></span>
            <span class="white-bar"></span>
          </a>
        </div>
      </header>

      <section class="main-section">
        <div class="vertical-slider">
          <div class="slide slide-1">
            <div class="form-modal">
              <header>
                <h1>Login</h1>
              </header>
              <section>
                <form id="loginForm" action="/login" method="post">
                  <div class="text-input-group">
                    <input ng-model="loginUser.username" autocomplete="off" autofill="off" id="login-username" type="text" name="username">
                    <label ng-show="!loginUser.username" for="login-username">username</label>
                  </div>
                  <div class="text-input-group">
                    <input ng-model="loginUser.password" autocomplete="off" autofill="off" id="login-password" type="password" name="password">
                    <label ng-show="!loginUser.password" for="login-password">password</label>
                  </div>
                  <button type="submit">Login</button>
                </form>
              </section>
            </div>
            <div class="form-modal">
              <header>
                <h1>Register</h1>
              </header>
              <section>
                <form id="registerForm" action="/register" method="post">
                  <div class="text-input-group">
                    <input ng-model="registerUser.username" autocomplete="off" autofill="off" id="register-username" type="text" name="username">
                    <label ng-show="!registerUser.username" for="register-username">username</label>
                  </div>
                  <div class="text-input-group">
                    <input ng-model="registerUser.password" autocomplete="off" autofill="off" id="register-password" type="password" name="password">
                    <label ng-show="!registerUser.password" for="register-password">password</label>
                  </div>
                  <div class="text-input-group">
                    <input ng-model="registerUser.email" autocomplete="off" autofill="off" id="register-email" type="text" name="email">
                    <label ng-show="!registerUser.email" for="register-email">email</label>
                  </div>
                  <div class="text-input-group">
                    <input ng-model="registerUser.first_name" autocomplete="off" autofill="off" id="register-firstName" type="text" name="first_name">
                    <label ng-show="!registerUser.first_name" for="register-firstName">first name</label>
                  </div>
                  <div class="text-input-group">
                    <input ng-model="registerUser.last_name" autocomplete="off" autofill="off" id="register-lastName" type="lastName" name="last_name">
                    <label ng-show="!registerUser.last_name" for="register-lastName">last name</label>
                  </div>
                  <button type="submit">Register</a>
                </form>
              </section>
            </div>
          </div>
        </div>
      </section>

      <footer class="main-footer fixed-bottom">
        <p>
          Copyright © 2015–2016 BreadButter
        </p>
      </footer>

    </main>
    <script src="/bower_components/jquery/dist/jquery.min.js" charset="utf-8"></script>
    <script src="/bower_components/angular/angular.min.js" charset="utf-8"></script>
    <script src="/bower_components/angular-route/angular-route.min.js" charset="utf-8"></script>
    <script src="/js/home/main.js" charset="utf-8"></script>
  </body>
</html>
